<h1>Lunches</h1>

<% if @meetings.count == 0 %>
  <h4>Looks like you don't have any lunches...yet.</h4>
<% end %>

<% @meetings.each do |meeting| %>
  <h4><%= link_to meeting.created_at.strftime("%B %d, %Y"), user_meeting_path(current_user, meeting) %></h4>
  <div class="col-md-6">
  <%= image_tag meeting.restaurant.image, class: 'img-responsive', width: '200px' %>
  </div>
   <div class="col-md-6 text-left">
  <p>
  <%= link_to meeting.restaurant.name, meeting.restaurant.url %><br>
  Guest: <%= meeting.users.where.not(id: params[:user_id]).first.name%><br>
  Time: <%= meeting.time %><br>
  Status: <%= meeting.status %>
  </p>
  </div>
<% end %>